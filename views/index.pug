doctype html
html
    head 
        meta(charset='UTF-8')
        title Contact Manager 
        link(rel='stylesheet' href='/styles.css')
        script(type='module' src='https://cdn.jsdelivr.net/gh/starfederation/datastar@v1.0.0-RC.7/bundles/datastar.js')
    body(data-signals="{}")
        header 
            a(href='/contacts')
                h1 Contact Manager 

        section#sidebar 
            include sidebar.pug

        main#content 
            case action 
                when 'show': include contact.pug
                when 'new': include form.pug
                when 'edit': include form.pug
                default: p Select a contact
